@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="bg-light card">
    <div class="card-body py-2">
    <form class="form-inline">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control ml-sm-2"><option value="">--All--</option></select>
        <label asp-for="BrandId" class="ml-sm-3">Brand</label>
        <select asp-for="BrandId" asp-items="Model.Brands" class="form-control ml-sm-2"><option value="">--All--</option></select>
        <button class="btn btn-primary ml-sm-3 mt-2 mt-sm-0" >Filter</button>
    </form>
    </div>
</div>

<div class="row mt-3">
    @foreach (var item in Model.Products)
    {
        <div class="col-sm-6 col-lg-4 ">
            <div class="card mb-3">
                <img class="card-img-top product-image" src="~/Images/Products/@item.PictureUri" alt="@item.ProductName" />
                <div class="card-body">
                    <h6 class="card-title product-name">@item.ProductName</h6>
                    <p class="card-text d-flex justify-content-between align-items-end">
                        <span class="h5"> @item.Price.ToString("$0.00")</span>
                        <a href="#" class="btn btn btn-success" title="Add To Basket"><i class="fas fa-cart-plus"></i></a>

                    </p>
                </div>
            </div>
        </div>
    }
</div>

