@model CheckOutViewModel
@{
    ViewData["Title"] = "Checkout";
}
<div asp-validation-summary="ModelOnly" class="alert alert-info"></div>

<form asp-controller="Basket" asp-action="Checkout" method="post">
    <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Your cart</span>
                <span class="badge badge-secondary badge-pill">@Model.Basket.Items.Count</span>
            </h4>
            <ul class="list-group mb-3">
                @foreach (var item in Model.Basket.Items)
                {
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">@item.ProductName</h6>
                            <small class="text-muted">$@item.UnitPrice.ToString("n2") x@(item.Quantity)</small>
                        </div>
                        <span class="text-muted">$@item.TotalPrice.ToString("n2")</span>
                    </li>
                }
                <li class="list-group-item d-flex justify-content-between">
                    <span>Total (USD)</span>
                    <strong>$@Model.Basket.TotalPrice.ToString("n2")</strong>
                </li>
            </ul>
        </div>
        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Shipping address</h4>

            <div class="row">
                <div class="col-md-8 mb-3">
                    <label asp-for="Street"></label>
                    <input asp-for="Street" type="text" class="form-control" placeholder="1234 Main St" required>
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="City"></label>
                    <input asp-for="City" type="text" class="form-control" placeholder="" required>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-5 mb-3">
                    <label asp-for="Country"></label>
                    <input asp-for="Country" type="text" class="form-control" placeholder="" required>
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="State"></label>
                    <input asp-for="State" type="text" class="form-control" placeholder="" required>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="ZipCode">Zip</label>
                    <input asp-for="ZipCode" type="text" class="form-control" placeholder="" required>
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
            </div>
            <hr class="mb-4">

            <h4 class="mb-3">Payment</h4>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="CCOwner">Name on card</label>
                    <input asp-for="CCOwner" type="text" class="form-control" placeholder="" required>
                    <small class="text-muted">Full name as displayed on card</small>
                    <span asp-validation-for="CCOwner" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="CCNumber">Credit card number</label>
                    <input asp-for="CCNumber" type="text" class="form-control" placeholder="" required>
                    <span asp-validation-for="CCNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 mb-3">
                    <label asp-for="CCExpiration">Expiration</label>
                    <input asp-for="CCExpiration" type="text" class="form-control" placeholder="" required>
                    <span asp-validation-for="CCExpiration" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="CCCW">CVV</label>
                    <input asp-for="CCCW" type="text" class="form-control" placeholder="" required>
                    <span asp-validation-for="CCCW" class="text-danger"></span>
                </div>
            </div>
            <hr class="mb-4">
            <button class="btn btn-primary btn-lg btn-block" type="submit">Complete Payment</button>
        </div>
    </div>
</form>
